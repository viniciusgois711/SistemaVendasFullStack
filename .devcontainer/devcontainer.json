{
  "name": "Node + Angular Dev",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",

  "forwardPorts": [4200, 3000],

  "postCreateCommand": "npm install -g @angular/cli && (cd sistema-de-vendas && npm install)",

  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "angular.ng-template"
      ]
    }
  }
}
